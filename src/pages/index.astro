---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
    <!-- Hero Section -->
    <div class="container mx-auto px-4 py-12">
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold mb-6">Jon Kaplan</h1>
        
        <!-- Thesis statement with simpler lines -->
        <div class="flex items-center justify-center gap-8 my-12">
          <div class="h-[1px] bg-gray-300 w-12"></div>
          <p class="text-3xl">Building advanced technology that works for humans</p>
          <div class="h-[1px] bg-gray-300 w-12"></div>
        </div>

        <!-- Role/Focus area - made more subtle -->
        <div class="text-xl text-gray-600 mb-8">
          Product Leader | Human-Centered AI & Robotics | Autonomous Systems
        </div>

        <!-- Description -->
        <p class="text-lg max-w-3xl mx-auto mb-8 text-gray-700">
          Leading product innovation at Wing (Alphabet's autonomous drone delivery company and Google X graduate) to enable millions of autonomous drone deliveries yearly. Proven track record of transforming complex AI and robotics systems into intuitive products that solve real human needs - from military exoskeletons to large-scale autonomous systems.
        </p>

        <!-- Buttons -->
        <div class="flex justify-center gap-4">
          <a href="/cv" class="btn btn-primary">View Full CV</a>
          <a href="https://www.linkedin.com/in/jonathankaplan/" class="btn btn-outline" target="_blank">Connect on LinkedIn</a>
        </div>
      </div>
    </div>

    <!-- Achievement Cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-primary mb-2" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="8" r="6"/>
            <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/>
          </svg>
          <h2 class="card-title">TIME's Best Inventions 2024</h2>
          <p>Featured twice for groundbreaking work in drone delivery and exoskeleton technology</p>
        </div>
      </div>
      
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-primary mb-2" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.86-4.22 2.5 2.5 0 0 1 3.9-1.06"/>
            <path d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.86-4.22 2.5 2.5 0 0 0-3.9-1.06"/>
          </svg>
          <h2 class="card-title">AI Innovation</h2>
          <p>Developed embedded AI systems achieving 99% accuracy in human gait detection and augmentation</p>
        </div>
      </div>
      
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-primary mb-2" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"/>
            <line x1="4" y1="22" x2="4" y2="15"/>
          </svg>
          <h2 class="card-title">Scale & Impact</h2>
          <p>Built teleoperations software, enabling drone delivery scale by 75%, serving thousands of new customers</p>
        </div>
      </div>
      
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-primary mb-2" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="16 18 22 12 16 6"/>
            <polyline points="8 6 2 12 8 18"/>
          </svg>
          <h2 class="card-title">Technical Excellence</h2>
          <p>2 Patents & 8 Publications in robotics and biomechanics</p>
        </div>
      </div>
    </div>

    <!-- Tech Stack Section -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Technical Expertise</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="p-4 bg-base-100 rounded-lg shadow-md">
          <h3 class="font-bold mb-2">Languages</h3>
          <ul class="list-disc list-inside">
            <li>Python</li>
            <li>C</li>
            <li>MATLAB</li>
            <li>SQL</li>
          </ul>
        </div>
        <div class="p-4 bg-base-100 rounded-lg shadow-md">
          <h3 class="font-bold mb-2">AI/ML</h3>
          <ul class="list-disc list-inside">
            <li>Computer Vision</li>
            <li>Machine Learning</li>
            <li>Data Analysis</li>
            <li>Neural Networks</li>
          </ul>
        </div>
        <div class="p-4 bg-base-100 rounded-lg shadow-md">
          <h3 class="font-bold mb-2">Product</h3>
          <ul class="list-disc list-inside">
            <li>Roadmapping</li>
            <li>User Research</li>
            <li>Cross Functional Team Leadership</li>
            <li>Data-Driven Design</li>
          </ul>
        </div>
        <div class="p-4 bg-base-100 rounded-lg shadow-md">
          <h3 class="font-bold mb-2">Robotics</h3>
          <ul class="list-disc list-inside">
            <li>Control Systems</li>
            <li>Sensor Integration</li>
            <li>Motion Planning</li>
            <li>System Design</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Featured Projects -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Featured Work</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <a href="https://wing.com/unmanned-traffic-management/" 
          target="_blank" 
          class="transition-transform hover:scale-[102%] h-[400px]"> 
          <div class="card bg-base-100 shadow-xl h-full"> 
            <figure class="px-6 pt-6">
              <Image
                src="/Wing Delivery Drone.webp"
                alt="Wing Delivery Network"
                width={600}
                height={400}
                format="webp"
                class="rounded-xl h-48 w-full object-cover"
              />
            </figure>
            <div class="card-body">
              <h3 class="card-title">Wing Delivery Network</h3>
              <p>Leading product development for autonomous drone delivery teleoperations, enabling safe operations across multiple countries as part of Wing's Uncrewed Traffic Management (UTM) team</p>
            </div>
          </div>
        </a>

        <a href="https://web.archive.org/web/20211018235054/https://dephy.com/faster/" 
          target="_blank" 
          class="transition-transform hover:scale-[102%] h-[400px]"> 
          <div class="card bg-base-100 shadow-xl h-full"> 
            <figure class="px-6 pt-6">
              <Image
                src="/FASTER.jpg"
                alt="FASTER Exoskeleton"
                width={600}
                height={400}
                format="webp"
                class="rounded-xl h-48 w-full object-cover"
              />
            </figure>
            <div class="card-body">
              <h3 class="card-title">FASTER Wearable Robotics</h3>
              <p>Developed AI-powered exoskeleton systems for military and research applications, securing $1M+ in funding</p>
            </div>
          </div>
        </a>
      </div>
    </div>

    <!-- Latest Blog Posts -->
    {last_posts.length > 0 && 
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-center">Latest Articles</h2>
        <div class="space-y-4">
          {last_posts.map((post) => (
            <HorizontalCard
              title={post.data.title}
              img={post.data.heroImage}
              desc={post.data.description}
              url={`/blog/${createSlug(post.data.title, post.slug)}`}
              target="_self"
              badge={post.data.badge}
            />
          ))}
        </div>
      </div>
    }
  </div>
</BaseLayout>