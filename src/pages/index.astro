---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";
import FeaturedWork from "../components/FeaturedWork.astro";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
    <!-- Hero Section -->
    <div class="container mx-auto px-4 py-12">
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold mb-6">Jon Kaplan</h1>
        
        <div class="flex items-center justify-center gap-8 my-12">
          <div class="h-[1px] bg-gray-300 w-12"></div>
          <p class="text-3xl">Building advanced technology that works for humans</p>
          <div class="h-[1px] bg-gray-300 w-12"></div>
        </div>

        <div class="text-xl text-gray-600 mb-8">
          Product Leader | Human-Centered AI & Robotics | Autonomous Systems
        </div>

        <p class="text-lg max-w-3xl mx-auto mb-8 text-gray-700">
          Leading product innovation at Wing (Alphabet's autonomous drone delivery company and Google X graduate) to enable millions of autonomous drone deliveries yearly. Proven track record of transforming complex AI and robotics systems into intuitive products that solve real human needs - from military exoskeletons to large-scale autonomous systems.
        </p>

        <!-- Buttons -->
        <div class="flex justify-center gap-6">
          <a 
            href="/jonathan-kaplan-resume.pdf" 
            class="btn btn-primary group hover:scale-105 transition-transform duration-200 flex items-center gap-2"
            download
          >
            <span>Download Resume</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 group-hover:translate-y-1 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 17V3m0 14l-4-4m4 4l4-4M2 17l.621 2.485A2 2 0 0 0 4.561 21h14.878a2 2 0 0 0 1.94-1.515L22 17"/>
            </svg>
          </a>
          <a 
            href="https://www.linkedin.com/in/jonathankaplan/" 
            class="btn btn-outline hover:bg-[#0077B5] hover:border-[#0077B5] hover:text-white transition-colors duration-200 flex items-center gap-2"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span>Let's Connect</span>
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Achievement Cards -->
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 justify-items-center mb-16">
        <div class="max-w-sm w-full">
          <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full">
            <div class="card-body items-center text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-primary mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="8" r="6"/>
                <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/>
              </svg>
              <h2 class="card-title">TIME's Best Inventions 2024</h2>
              <p>Featured twice for groundbreaking work in drone delivery and exoskeleton technology</p>
            </div>
          </div>
        </div>
        
        <div class="max-w-sm w-full">
          <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full">
            <div class="card-body items-center text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-primary mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.86-4.22 2.5 2.5 0 0 1 3.9-1.06"/>
                <path d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.86-4.22 2.5 2.5 0 0 0-3.9-1.06"/>
              </svg>
              <h2 class="card-title">AI Innovation</h2>
              <p>Developed embedded AI systems achieving 99% accuracy in human gait detection and augmentation</p>
            </div>
          </div>
        </div>

        <div class="max-w-sm w-full">
          <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full">
            <div class="card-body items-center text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-primary mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"/>
                <line x1="4" y1="22" x2="4" y2="15"/>
              </svg>
              <h2 class="card-title">Scale & Impact</h2>
              <p>Built teleoperations software, enabling drone delivery scale by 75%, serving thousands of new customers</p>
            </div>
          </div>
        </div>

        <div class="max-w-sm w-full">
          <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full">
            <div class="card-body items-center text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-primary mb-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="16 18 22 12 16 6"/>
                <polyline points="8 6 2 12 8 18"/>
              </svg>
              <h2 class="card-title">Technical Excellence</h2>
              <p>2 Patents & 8 Publications in robotics and biomechanics</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tech Stack Section -->
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center">Technical Expertise</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 justify-items-center mb-16">
        <div class="max-w-sm w-full">
          <div class="bg-base-100 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full p-6">
            <h3 class="font-bold text-xl mb-4">Languages</h3>
            <ul class="list-disc list-inside space-y-2">
              <li>Python</li>
              <li>C</li>
              <li>MATLAB</li>
              <li>SQL</li>
            </ul>
          </div>
        </div>

        <div class="max-w-sm w-full">
          <div class="bg-base-100 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full p-6">
            <h3 class="font-bold text-xl mb-4">AI/ML</h3>
            <ul class="list-disc list-inside space-y-2">
              <li>Computer Vision</li>
              <li>Machine Learning</li>
              <li>Data Analysis</li>
              <li>Neural Networks</li>
            </ul>
          </div>
        </div>

        <div class="max-w-sm w-full">
          <div class="bg-base-100 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full p-6">
            <h3 class="font-bold text-xl mb-4">Product</h3>
            <ul class="list-disc list-inside space-y-2">
              <li>Roadmapping</li>
              <li>User Research</li>
              <li>Cross Functional Team Leadership</li>
              <li>Data-Driven Design</li>
            </ul>
          </div>
        </div>

        <div class="max-w-sm w-full">
          <div class="bg-base-100 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 h-full p-6">
            <h3 class="font-bold text-xl mb-4">Robotics</h3>
            <ul class="list-disc list-inside space-y-2">
              <li>Control Systems</li>
              <li>Sensor Integration</li>
              <li>Motion Planning</li>
              <li>System Design</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Featured Projects -->
    <div class="mb-16">
      <FeaturedWork client:load />
    </div>

    <!-- Latest Blog Posts -->
    {
      last_posts.length > 0 && (
        <div class="max-w-5xl mx-auto px-4 mb-16">
          <h2 class="text-3xl font-bold mb-8 text-center">Latest Articles</h2>
          <div class="space-y-8">
            {last_posts.map((post) => (
              <HorizontalCard
                title={post.data.title}
                img={post.data.heroImage}
                desc={post.data.description}
                url={`/blog/${createSlug(post.data.title, post.slug)}`}
                target="_self"
                badge={post.data.badge}
              />
            ))}
          </div>
        </div>
      )
    }
</BaseLayout>